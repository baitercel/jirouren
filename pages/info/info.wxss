.chat-item{
  width: 725rpx;
  background: #ffffff;
  padding:0 0 25rpx 0;
  border-bottom: solid 1px #ebebeb;
}
.chat-item  image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
.chat-item .avatar{
  flex: 1;
}
.chat-item .chat-content{
  flex: 4;
  text-align: left;
}
.chat-item .chat-content text{
  /*display: block;*/
}
.chat-item .chat-content .chat-source{
  color: #818A8F;
  font-size: 28rpx;
  padding: 20rpx 0 20rpx 20rpx;
}
.chat-item .chat-content .chat-source .chatmate{
  font-size: 34rpx;
  color: #d81e06;
  text-align: left;
}
.chat-item .chat-content .chat-source .lasttime{
  flex: 1;
  font-size: 22rpx;
  float: right;
  vertical-align: text-bottom;
}
.chat-item .chat-content .chat-txt{
  padding-left:20rpx;
  display: block;
  color: #000;
  font-size: 26rpx;
  line-height: 34rpx;
}

.wu-xia-kuang{
  border-bottom: none;
}

.you-shang-kuang{
  border-top: solid 1px #ebebeb;
}